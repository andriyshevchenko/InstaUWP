<Application
    x:Class="App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App"
    xmlns:mvvmlight="using:GalaSoft.MvvmLight.Extensions.Xaml"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <local:Locator x:Key="Locator" />

            <mvvmlight:ViewModelConverterPipe x:Key="viewModelConverter">
                <mvvmlight:Pair ViewTypeName="App.Blank" ViewModelTypeName="App.BlankViewModel"/>
                <mvvmlight:Pair ViewTypeName="App.Error" ViewModelTypeName="IErrorViewModel"/>
                <mvvmlight:Pair ViewTypeName="App.Login" ViewModelTypeName="App.LoginViewModel"/>
            </mvvmlight:ViewModelConverterPipe>

        </ResourceDictionary>
    </Application.Resources>
</Application>
