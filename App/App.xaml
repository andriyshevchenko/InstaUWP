<Application
    x:Class="App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App"
    xmlns:mvvmlight="using:GalaSoft.MvvmLight.Extensions.Xaml"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <local:Locator x:Key="Locator" />

            <mvvmlight:ViewModelConverterPipe x:Key="viewModelConverter">
                <mvvmlight:Pair ViewTypeName="Blank" ViewModelTypeName="BlankViewModel"/>
                <mvvmlight:Pair ViewTypeName="Error" ViewModelTypeName="IErrorViewModel"/>
                <mvvmlight:Pair ViewTypeName="Login" ViewModelTypeName="LoginViewModel"/>
                <mvvmlight:Pair ViewTypeName="RadialProgress" ViewModelTypeName="PleaseWaitViewModel"/>
            </mvvmlight:ViewModelConverterPipe>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/InstagramButton.xaml"/>
                <ResourceDictionary Source="Styles/InstagramTextBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
