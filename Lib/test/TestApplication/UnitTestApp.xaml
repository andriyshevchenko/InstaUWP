<Application
    x:Class="TestApplication.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestApplication"
    xmlns:mvvmlight="using:GalaSoft.MvvmLight.Extensions.Xaml"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <mvvmlight:ViewModelConverterPipe x:Key="viewModelConverter">
                <mvvmlight:Pair ViewTypeName="BlankPage" ViewModelTypeName="MainViewModel"/>
                <mvvmlight:Pair ViewTypeName="OtherPage" ViewModelTypeName="OtherPageViewModel"/>
                <mvvmlight:Pair ViewTypeName="ReproduceErrorPage" ViewModelTypeName="ReproduceErrorViewModel"/>
            </mvvmlight:ViewModelConverterPipe>
        </ResourceDictionary>
    </Application.Resources>
</Application>
