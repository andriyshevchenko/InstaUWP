<Application
    x:Class="Instagram.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Instagram"
    xmlns:xaml="using:GalaSoft.MvvmLight.Extensions.Xaml"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <xaml:ValueConverterPipe x:Key="ViewModelConverter">
                <xaml:ValueConverterPipe.Converters>
                    <xaml:ViewModelAccessor></xaml:ViewModelAccessor>
                    <xaml:ViewModelConverter>
                        <xaml:ViewModelConverter.ViewMap>
                            <local:ViewMap/>
                        </xaml:ViewModelConverter.ViewMap>
                    </xaml:ViewModelConverter>
                </xaml:ValueConverterPipe.Converters>
            </xaml:ValueConverterPipe>
        </ResourceDictionary>
    </Application.Resources>
</Application>
